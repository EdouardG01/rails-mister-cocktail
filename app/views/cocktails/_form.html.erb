<div class="container padded">
  <h1 class="text-center">Add new cocktail</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for(cocktail) do |f| %>
        <%= f.input :name %>


        <%= f.submit "Submit", class: "btn btn-outline-secondary rounded-pill btn-lg"%>
        <% end %>
        <br>
        <div class="pad20">
          <%= link_to "Go back", cocktails_path, class: "btn btn-outline-dark rounded-pill btn-sm" %>
        </div>
    </div>
  </div>
</div>
